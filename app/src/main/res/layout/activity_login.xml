<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ru.goryachev.testjob.activities.LoginActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/input_phone"
        android:hint="XXXXXXXXXX"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:maxLength="10" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_login"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Зарегистрироваться"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+7"
        android:id="@+id/text_plus_seven"
        android:layout_alignBottom="@+id/input_phone"
        android:layout_toLeftOf="@+id/input_phone"
        android:layout_toStartOf="@+id/input_phone"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="20dp"
        android:layout_alignTop="@+id/input_phone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ваш номер телефона:"
        android:id="@+id/textView"
        android:layout_above="@+id/input_phone"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_operator_logo"
        android:layout_above="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="69dp" />
</RelativeLayout>
